<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegistrationFragments.RegPersonalInfo"
    android:background="@drawable/login_bg">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/reg_input_fname"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/inputcode"
                android:padding="10dp"
                android:hint="@string/fristname"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/reg_input_lname"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/inputcode"
                android:padding="10dp"
                android:hint="@string/lastname"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputemail"
            android:textAlignment="viewStart"
            android:layoutDirection="ltr"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:layout_weight="6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/reg_input_email"
                android:background="#00ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:textAlignment="viewStart"
                android:hint="@string/emailhintinputlogin"
                android:layout_weight="1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputregion"
            android:textAlignment="viewStart"
            android:layoutDirection="ltr"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout5"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView56"
                android:layout_weight="6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/req_input_activity_name"
                android:background="#00ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:textAlignment="viewStart"
                android:hint="@string/vendorname"
                android:layout_weight="1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputmobile"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_above="@+id/linearLayout4"
            android:layout_alignEnd="@+id/linearLayout4"
            android:id="@+id/linearLayout5"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_weight="6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/reg_input_phone_num"
                android:background="#00ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:textAlignment="viewStart"
                android:hint="@string/phonehintinputlogin"
                android:layout_weight="1"
                android:textSize="20dp"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputpassword"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_weight="6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/reg_input_password"
                android:background="#00ffffff"
                android:padding="6dp"
                android:hint="@string/passwordhintinputlogin"
                android:layout_weight="1"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:gravity="center|start"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/inputpassword"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:id="@+id/linearLayout4"
            android:layout_above="@+id/next_btn"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_weight="6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/reg_input_re_password"
                android:background="#00ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:hint="@string/repasswordhintinputlogin"
                android:layout_weight="1"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/save"
            android:id="@+id/next_btn"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_below="@+id/linearLayout6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/placeholderexpert"
        app:border_color="@color/colorPrimary"
        app:border_width="2dp"
        android:layout_gravity="center"
        android:id="@+id/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />



</RelativeLayout>
