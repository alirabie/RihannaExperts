<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experts.rihanna.appsmatic.com.rihannaexperts.Fragments.SideMenuFragments.ScheduleMangeFragments.SetScheduleFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout25">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView19"
            android:src="@drawable/timeicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/worktimes"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/linearLayout25"
        android:layout_alignParentEnd="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e3e3"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/work_time_from"
                android:background="#ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:hint="@string/from"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:inputType="text" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:padding="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e3e3"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/work_time_to"
                android:background="#ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:hint="@string/to"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:inputType="text" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
