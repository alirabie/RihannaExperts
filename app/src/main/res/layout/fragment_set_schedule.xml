<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="experts.rihanna.appsmatic.com.rihannaexperts.Fragments.SideMenuFragments.ScheduleMangeFragments.SetScheduleFrag">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:id="@+id/linearLayout30"
        android:layout_below="@+id/frameLayout5"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e3e3"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/work_time_from"
                android:background="#ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:hint="@string/from"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:inputType="text" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:padding="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e3e3e3"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/work_time_to"
                android:background="#ffffff"
                android:padding="6dp"
                android:gravity="center|start"
                android:hint="@string/to"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:inputType="text" />
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d8d8d8"
        android:id="@+id/frameLayout5"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/day_spinner"
            android:background="#ffffff"
            android:padding="5dp"
            android:hint="@string/day"
            android:textSize="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/frameLayout5"
            android:layout_margin="1dp" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/linearLayout25"
        android:layout_below="@+id/save_new_scadule_btn"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView19"
            android:src="@drawable/timeicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/worktimes"
            android:textSize="13dp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/save"
        android:id="@+id/save_new_scadule_btn"
        android:layout_below="@+id/linearLayout30"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scadules_contener"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout25"></FrameLayout>

</RelativeLayout>
