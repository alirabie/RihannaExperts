<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cast_expanded_controller_text_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <CheckBox
        android:id="@+id/indor_serv_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subscribe_btn"
        android:layout_weight="1"
        android:checked="false"
        android:padding="3dp"
        android:text="@string/indoorservice"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/indor_serv_check"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/extrafees"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/extrafees_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/dropdwonlistbg"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/sr"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/save_extra_fess"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/save"
            android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
            android:textSize="24sp"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>