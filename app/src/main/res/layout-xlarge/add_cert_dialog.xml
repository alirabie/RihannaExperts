<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout9"
        android:layout_below="@+id/close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8d8d8">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cert_name_input"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:hint="@string/cert"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8d8d8"
            android:layout_marginTop="10dp">

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/spicialty_input"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:hint="@string/specialty"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8d8d8"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/granter_input"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:hint="@string/grantor"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d8d8d8"
            android:layout_marginTop="10dp">

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/year_of_grant_input"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:hint="@string/certyear"
                android:textSize="25dp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/save"
                android:id="@+id/save"
                android:padding="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_below="@+id/linearLayout6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="35dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X"
        android:id="@+id/close"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout9"
        android:textSize="30dp"
        android:padding="15dp" />

</RelativeLayout>